server {
    listen 80;
    server_name {{ domain }};
    
    # Allow certbot challenges
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
    
    # Redirect everything else to HTTPS (after SSL is set up)
    location / {
        return 301 https://$server_name$request_uri;
    }
}